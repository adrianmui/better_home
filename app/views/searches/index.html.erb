<h1>Neighborhoods near you</h1>


<h2>Based on zestimates</h2>
<%= image_tag("chart/zestimates_image.png") %>


<h2>Based on distance from you</h2>
<%= image_tag("chart/coordinates_image.png") %>


<h2>GMAP</h2>
<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script>
function initMap() {
    // User's coordinates.
    var userCoords = <%= @coords.to_json.html_safe %>;
    var formattedUserCoords = {
      lat: parseInt(userCoords.lat), 
      lng: parseInt(userCoords.lon)
    }

    // Neighborhood coordinates.
    var neighborhoodCoordinates = <%= @names_coordinates_json.html_safe %>
    var formattedCoordinates = neighborhoodCoordinates.map (function(obj) {
      return {lat: parseInt(obj.coords.lat), lng: parseInt(obj.coords.lon)};
    }) 

    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 15,
      center: formattedUserCoords,
      mapTypeId: google.maps.MapTypeId.ROADMAP
    });

    // Making multiple markers.
    var infoWindow = new google.maps.InfoWindow(), marker, i;

    for(var i=0; i < formattedCoordinates.length; i++) {
      position = [formattedCoordinates[i].lat,formattedCoordinates[i].lng]
      var marker = new google.maps.Marker({
        position: new google.maps.LatLng(position[0],position[1]),
        map: map,
        title: 'Coordinate number ' + i.toString()
      });

      google.maps.event.addListener(marker, 'click', (function(marker, i) {
        return function() {
          infoWindow.setContent(neighborhoodCoordinates[i].name);
          infoWindow.open(map, marker);
        }
      })(marker, i));
    }
}

initMap()
</script>