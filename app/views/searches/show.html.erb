<h1>Your property</h1>
<table>
<% @property.each do |key,val| %>
  <tr>
    <%= content_tag :th, key %>
    <% if key == 'links' %>
      <th>
      <% val.each do |k,v| %>
        <%= link_to k, v %><br>
      <% end %>
      </th>
    <% elsif key == 'address' %>
      <th>
        <%= "#{val['street']}" %><br>
        <%= "#{val['city']}" %><br>
        <%= "#{val['state']} #{val['zipcode']}" %><br>
      </th>
    <% elsif key == 'lastSoldPrice' %>
      <th>
        <%= "#{val['currency']} #{val['content']}" %><br>
      </th>
    <% elsif key == 'zestimate' %>
      <th>
      <%= "Amount: #{val['amount']['currency']} #{val['amount']['__content__']}" %><br>
      <%= "Last updated: #{val['last_updated']}" %><br>
      <%= "Value change: #{val['valueChange']['currency']} #{val['valueChange']['content']}" %><br>
      <%= "Valuation range: " %><br>
      <%= "   LOW: #{val['valuationRange']['low']['currency']} #{val['valuationRange']['low']['content']}" %><br>
      <%= "   HIGH: #{val['valuationRange']['high']['currency']} #{val['valuationRange']['high']['content']}" %><br>
      </th>
    <% elsif key == 'localRealEstate' %>
      <th>
        <%= "For the region: #{val['region']['zindexValue']}" %><br>
        <% val['region']['links'].each do |k,v| %>
          <%= link_to k,v %><br>
        <% end %>
        <%= "Name: #{val['region']['name']}" %><br>
        <%= "Region id: #{val['region']['id']}" %><br>
      </th>
    <% else %>
      <th>
        <%= val %><br>
      </th>
    <% end %>
  </tr>
<% end %>
</table>


<h1>Search for neighborhoods around you</h1>
<%= form_tag '/neighborhoods', method: :get do %>
  <% address = @property['address'] %>
  <input type="hidden" name='state' value=<%= address['state'] %>>
  <input type="hidden" name='city' value=<%= address['city'] %>>
  <input type="hidden" name='coords' value=<%= ActiveSupport::JSON.encode @coords %>>
  <%= submit_tag "Submit" %>
<% end %>