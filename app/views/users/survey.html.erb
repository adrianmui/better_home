<div class="col-sm-5">
  <img src="http://placehold.it/350x600"></div>
<div class="col-sm-7">
<%= simple_form_for @user, :url => searches_path, method: :post do |f| %>

  <div class="panel panel-primary">
    <div class="panel panel-heading">
      <div >
        <%= f.label :cost_score, "How important is cost of the property?" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.input_field :cost_score, collection: 1..5,
              as: :radio_buttons,
              item_wrapper_class: 'radio-inline',
              input_html: {required: true} %>
    </div>
  </div>

  <div class="panel panel-primary">
    <div class="panel panel-heading">
      <div>
        <%= f.label :transit_score, "How willing are you to use public transit?" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.input_field :transit_score, collection: 1..5,
              as: :radio_buttons,
              item_wrapper_class: 'radio-inline' %>
    </div>
  </div>

  <div class="panel panel-primary">
    <div class="panel panel-heading">
      <div>
        <%= f.label :walk_score, "How important is being able to points of interest?" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.input_field :walk_score, collection: 1..5,
              as: :radio_buttons,
              item_wrapper_class: 'radio-inline' %>
    </div>
  </div>

  <div class="panel panel-primary">
    <div class="panel panel-heading">
      <div>
        <%= f.label :commute_score, "How important is being able to walk to work?" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.input_field :commute_score, collection: 1..5,
              as: :radio_buttons,
              item_wrapper_class: 'radio-inline' %>
    </div>
  </div>

  <div class="panel panel-primary">
    <div class="panel panel-heading">
      <div>
        <%= f.label :crime_score, "How important is for you to have a safe/low crime home?" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.input_field :crime_score, collection: 1..5,
              as: :radio_buttons,
              item_wrapper_class: 'radio-inline' %>
    </div>
  </div>

  <div class="container" id="survey-submit">
    <div class="form-group">
      <div class="input-group">
        <div class="input-group-addon">Address</div>
        <%= f.input_field :location_id, as: :search, class: 'form-control', placeholder: "Hold on Brother.." %>
        </div>
    </div>
    <%= f.button :submit, class: "btn btn-success btn-block active" %>
  </div>
<% end %>
</div>
