<div class="row">
  <div class="col-md-6 hidden-sm hidden-xs">
    <%=image_tag("san-franc-min.jpg", class: "survey-picture") %></div>
  <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-0" id="survey">
  <%= simple_form_for @user, :url => searches_path, method: :post do |f| %>

    <div class="panel panel-primary number-score">
      <div class="panel panel-heading">
        <div class="survey-question">
          <%= f.label :cost_score, "How important is housing cost?" %>
        </div>
      </div>
      <div class="form-group">
        Least <%= f.input_field :cost_score, collection: 1..5,
                as: :radio_buttons,
                item_wrapper_class: 'radio-inline',
                input_html: {required: true}%>
                <span class="most-important-text">Most</span>
      </div>
    </div>

    <div class="panel panel-primary number-score">
      <div class="panel panel-heading">
        <div class="survey-question">
          <%= f.label :transit_score, "How important is the availability of public transportation?" %>
        </div>
      </div>
      <div class="form-group">
        Least <%= f.input_field :transit_score, collection: 1..5,
                as: :radio_buttons,
                item_wrapper_class: 'radio-inline' %>
                <span class="most-important-text">Most</span>
      </div>
    </div>

    <div class="panel panel-primary number-score">
      <div class="panel panel-heading">
        <div class="survey-question">
          <%= f.label :walk_score, "How important is it to have everything within walking distance?" %>
        </div>
      </div>
      <div class="form-group">
        Least <%= f.input_field :walk_score, collection: 1..5,
                as: :radio_buttons,
                item_wrapper_class: 'radio-inline' %>
                <span class="most-important-text">Most</span>
      </div>
    </div>

    <div class="panel panel-primary number-score">
      <div class="panel panel-heading">
        <div class="survey-question">
          <%= f.label :commute_score, "How important is it to live close to your workplace?" %>
        </div>
      </div>
      <div class="form-group">
        Least <%= f.input_field :commute_score, collection: 1..5,
                as: :radio_buttons,
                item_wrapper_class: 'radio-inline' %>
                <span class="most-important-text">Most</span>
      </div>
    </div>

    <div class="panel panel-primary number-score">
      <div class="panel panel-heading">
        <div class="survey-question">
          <%= f.label :crime_score, "How important is it for you to live in a safe neighborhood?" %>
        </div>
      </div>
      <div class="form-group">
        Least <%= f.input_field :crime_score, collection: 1..5,
                as: :radio_buttons,
                item_wrapper_class: 'radio-inline' %>
                <span class="most-important-text">Most</span>
      </div>
    </div>

    <div class="container" id="survey-submit">
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-addon">Address</div>
          <%= f.input_field :location_id, as: :search, class: 'form-control', placeholder: "What location do you want to live by?" %>
          </div>
      </div>
      <%= f.button :submit, "Find your new neighborhood", class: "btn btn-success" %>
    </div>
  <% end %>
  </div>
</div>
